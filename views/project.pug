extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= project.project_name
        p= project.description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in project.technologies
            li= tech

        a.btn-link(href=project.live_link, target="live") Live Demo
        a.btn-link(href=project.github_link, target="social") GitHub Repo

    .project-img-box.box

      each image in project.images
        img.project-img(src=image.image_url, alt=image.image_alt)

    nav.nav
      a(href='/')
        span &larr;
        |  Back
