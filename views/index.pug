extends layout.pug

block content

  article.portfolio-intro

    h1 My Portfolio
 
    p Here are a few samples of work I've done. Click on the thumbnails for more screenshots and for a link to a live demo.


  article.portfolio-project-thumbs
    .projects-box.box.grid 

      each project in projects
        .cell
          a(href=`../projects/${project.id}`)
            img.thumbnail(src=project.images[0].image_url, alt=project.project_name + ' - thumbnail')
            h5= project.project_name


